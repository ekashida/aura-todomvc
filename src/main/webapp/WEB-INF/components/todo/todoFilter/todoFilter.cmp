<aura:component>

  <aura:attribute name="visibilityFilter" type="String" />

  <ul class="filters" onclick="{!c.onClick}">
    <li>
      <todo:filterLink
        type="ALL"
        visibilityFilter="{!v.visibilityFilter}"
      >
        All
      </todo:filterLink>
    </li>
    <li>
      <todo:filterLink
        type="ACTIVE"
        visibilityFilter="{!v.visibilityFilter}"
      >
        Active
      </todo:filterLink>
    </li>
    <li>
      <todo:filterLink
        type="COMPLETED"
        visibilityFilter="{!v.visibilityFilter}"
      >
        Completed
      </todo:filterLink>
    </li>
  </ul>

</aura:component>
