<aura:component extends="redux:provider">

  <aura:handler name="change" value="{!v.state}" action="{!c.onStateChange}"/>

  <aura:method name="stateSelector" action="{!c.stateSelector}" access="PUBLIC">
    <aura:attribute name="appState" type="Object" />
    <aura:attribute name="callback" type="Object" />
  </aura:method>

  <aura:attribute name="visibilityFilter" type="String" />

  <ul class="filters" onclick="{!c.onClick}">
    <li>
      <todo:filterLink
        type="ALL"
        visibilityFilter="{!v.visibilityFilter}"
      >
        All
      </todo:filterLink>
    </li>
    <li>
      <todo:filterLink
        type="ACTIVE"
        visibilityFilter="{!v.visibilityFilter}"
      >
        Active
      </todo:filterLink>
    </li>
    <li>
      <todo:filterLink
        type="COMPLETED"
        visibilityFilter="{!v.visibilityFilter}"
      >
        Completed
      </todo:filterLink>
    </li>
  </ul>

</aura:component>
